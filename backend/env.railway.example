# Configuración para Railway

# Base de datos MongoDB (usar MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/speech-therapy?retryWrites=true&w=majority

# Autenticación JWT
JWT_SECRET=your-super-secret-jwt-key-for-production
JWT_EXPIRES_IN=24h

# Configuración del servidor
NODE_ENV=production

# URLs de la aplicación (Railway las configurará automáticamente)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Configuración de CORS
CORS_ORIGIN=https://your-frontend-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Configuración de WebSockets
SOCKET_CORS_ORIGIN=https://your-frontend-app.vercel.app

# Configuración de seguridad
BCRYPT_ROUNDIN=12

# Configuración de sesiones
SESSION_SECRET=your-production-session-secret-key

# Configuración de archivos
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configuración de Agora (para videollamadas)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate
