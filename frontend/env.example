# 🎨 Configuración del Frontend - Variables de Entorno

# URL de la API del backend
VITE_API_URL=http://localhost:3001/api

# Configuración de la aplicación
VITE_APP_NAME=Speech Therapy Platform
VITE_APP_VERSION=1.0.0

# Configuración de desarrollo
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true

# Configuración de WebSockets
VITE_WS_URL=http://localhost:3001

# Configuración de autenticación
VITE_AUTH_STORAGE_KEY=speech-therapy-auth
VITE_TOKEN_REFRESH_INTERVAL=300000

# Configuración de videollamadas (si usas servicios externos)
VITE_AGORA_APP_ID=your-agora-app-id
VITE_AGORA_CHANNEL=default-channel

# Configuración de analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Configuración de monitoreo (opcional)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_LOGROCKET_APP_ID=your-logrocket-app-id

# Configuración de features
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_GAMES=true
VITE_ENABLE_AI_SUMMARIES=true

# Configuración de UI
VITE_THEME=light
VITE_LANGUAGE=es

# Configuración de testing
VITE_TEST_MODE=false
VITE_MOCK_API=false
